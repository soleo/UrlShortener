    "keywords": [
        "PrepHero",
        "UrlShortener"
    ],
    "homepage": "https://github.com/PrepHero/UrlShortener",
    "license": "MIT",
    "authors": [
        {
            "name": "Xinjiang Shao",
            "email": "shaoxinjiang@gmail.com",
            "homepage": "http://xinjiangshao.com",
